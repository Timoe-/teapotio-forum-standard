<!DOCTYPE html>
<html lang="en"><head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Thomas Potaire">

    {% stylesheets '@TeapotSiteBundle/Resources/public/css/fontawesome/font-awesome.css'
                   '@TeapotSiteBundle/Resources/public/css/redactor/redactor.css'
                   '@TeapotSiteBundle/Resources/public/css/beer/ui/link.css'
                   '@TeapotSiteBundle/Resources/public/css/beer/ui/button.css'
                   '@TeapotSiteBundle/Resources/public/css/beer/ui/heading.css'
                   '@TeapotSiteBundle/Resources/public/css/beer/ui/module.css'
                   '@TeapotSiteBundle/Resources/public/css/beer/ui/display.css'
                   '@TeapotSiteBundle/Resources/public/css/beer/ui/font.css'
                   '@TeapotSiteBundle/Resources/public/css/simple/*' %}
      <link href="{{ asset_url }}" rel="stylesheet" media="screen" />
    {% endstylesheets %}

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <title>{% block page_title %}{% if page_title is defined %}{{ page_title }}{% endif %}{% endblock %}</title>
  </head>
  <body{% if is_granted('IS_AUTHENTICATED_FULLY') and app.user.settings and (app.user.settings.backgroundImage or app.user.settings.backgroundColor) %} style="{% if app.user.settings.backgroundImage %}background-image: url({{ image(app.user.settings.backgroundImage.webPath) }});{% endif %}{% if app.user.settings.backgroundTiled == false %}background-repeat: no-repeat;{% endif %}{% if app.user.settings.backgroundColor %}background-color: #{{ app.user.settings.backgroundColor }};{% endif %}"{% endif %}>

    <div class="container">
      {% block container %}

      {% endblock %}
    </div>

    <footer class="footer" id="bottom">
      <img src="/img/teapot_small_logo.png" alt="Powered by Teapot" />
    </footer>

    <div id="overlay" class="hide">
      {% block overlays %}

      {% endblock %}
    </div>

    {% javascripts '@TeapotSiteBundle/Resources/public/js/jquery.js'
                   '@TeapotSiteBundle/Resources/public/js/redactor/redactor.min.js'
                   '@TeapotSiteBundle/Resources/public/js/main.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}

    {% block custom_js %}
    {% endblock %}
  </body>
</html>