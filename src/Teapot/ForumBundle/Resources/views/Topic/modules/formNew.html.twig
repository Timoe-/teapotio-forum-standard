{% extends "TeapotBaseForumBundle:Topic:modules/form.html.twig" %}

{#
  Required variables:
    - form_path
    - user
    - board
    - form
#}

{% block form_path %}
{% spaceless %}
  {% if board is null %}
    {{ forum_path("ForumNewTopicWithoutBoard") }}
  {% else %}
    {{ forum_path("ForumNewTopic", board) }}
  {% endif %}
{% endspaceless %}
{% endblock %}


{% block form_class %}
  form-new-topic
{% endblock %}


{% block topic_body %}
  {% if board is null %}
    {% include "TeapotForumBundle:Board:modules/boardPicker.html.twig" %}
  {% endif %}

  {{ parent() }}
{% endblock %}