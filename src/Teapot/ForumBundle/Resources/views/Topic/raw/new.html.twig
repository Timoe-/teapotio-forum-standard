{% extends "TeapotBaseForumBundle:Layout:content_wrapper.html.twig" %}

{% block content %}
<form action="" method="post" class="form-new-topic two-col" {{ form_enctype(form) }}>
  {{ form_errors(form) }}

  {% if currentBoard is null %}
    {% spaceless %}
      <div class="control-group">
        <label class="control-label required">{% trans %}Board{% endtrans %}</label>
        <div class="controls">
          {% set boards = get_boards() %}
          {% include "TeapotForumBundle:Board:modules/select.html.twig" with {boards: boards, name: "board_id", class: "text-xlarge"} %}
        </div>
      </div>
    {% endspaceless %}
  {% endif %}

  {{ form_widget(form) }}

  <button class="btn btn-success">{% trans %}Create.topic{% endtrans %}</button>
</form>
{% endblock %}