{% set total = 20 %}
{% set user_stats = get_top_forum_users(total) %}
{% set maxPosts = user_stats[0].totalMessage %}

{% if user_stats.count != 0 %}
  {% for stat in user_stats %}
    <div class="top-user">
      <div class="wrap">
        <div class="total-messages">{{ stat.shortTotalMessage }}</div>
        <div class="bar-graph" style="height: {{ 100 * stat.totalMessage / maxPosts }}px;"></div>
        {% include "TeapotUserBundle:Modules:avatar.html.twig" with {class: "dark", imageClass: "", user: stat.user, size: 35} %}
      </div>
    </div>
  {% endfor %}
{% endif %}